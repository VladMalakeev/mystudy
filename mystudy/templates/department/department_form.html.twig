{% extends 'department/department_list.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form_department.css') }}"  rel="stylesheet">
{% endblock %}

{% block absolute %}
    <div id="form_cover">
        <div id="newData">
            {{ form_start(form) }}
            <div id="main_info">
                <div id="short_name">
                    <h2>{{ form_label(form.short_name) }}</h2>
                    <div> {{ form_widget(form.short_name) }}</div>
                </div>

                <div id="full_name">
                    <h2>{{ form_label(form.full_name) }}</h2>
                    <div> {{ form_widget(form.full_name) }}</div>
                </div>
            </div>


            <h2>{{ form_label(form.description) }}</h2>
            <div id="description">{{ form_widget(form.description) }}</div>
            <div id="form_buttons">
                <input type="submit" class="form_submit" value ='Сохранить' name="form_submit" />
                <a class="form_submit" href="{{ path('department_index') }}">Отмена</a>
            </div>
            <input type="hidden" name="instituteId" value="{{  app.user.institute.getId }}">
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}