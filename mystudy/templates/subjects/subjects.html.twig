{% extends 'management/management.html.twig' %}
 {% block stylesheets %}
     {{ parent() }}
     <link href="{{ asset('css/subjects.css') }}"  rel="stylesheet">
 {% endblock %}

{% block title %}Список предметов{% endblock %}

{% block workspase %}
    <div id="block_workspace">
        <div id="departments">
            <ul>
                {% for department in data_base.getDepartments %}
                    <li>
                        <a href="{{ path('subject_show', {'currentDepartment':department.getShortName}) }}">{{ department.getShortName }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

       <div id="subjects_list">
           <ul>
               <li>
                   <a href="{{ path('new_subjects', {'currentDepartment' : department_name}) }}">Добавить предмет</a>
               </li>
            {% for subject in data_base.getSubjects(department_name) %}
                <li>
                    {{ subject.getName }}{{ include('subjects/_delete_form.html.twig') }}

                </li>
           {% endfor %}
           </ul>
       </div>
    </div>
{% endblock %}
