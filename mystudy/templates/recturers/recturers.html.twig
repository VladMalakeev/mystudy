{% extends 'management/management.html.twig' %}
 {% block stylesheets %}
     {{ parent() }}
     <link href="{{ asset('css/subjects.css') }}"  rel="stylesheet">
 {% endblock %}

{% block title %}Список преподавателей{% endblock %}

{% block workspase %}
    <div id="block_workspace">
        <div id="departments">
            <ul>
                {% for department in data_base.getDepartments %}
                    <li>
                        <a href="{{ path('recturers_show', {'currentDepartment':department.getShortName}) }}">{{ department.getShortName }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>

        <div id="subjects_list">
            <ul>
                <li>
                    <a href="{{ path('recturers_new', {'currentDepartment' : department_name}) }}">Добавить преподавателя</a>
                </li>
                {% for recturer in data_base.getRecturers(department_name) %}
                    <li>
                        {{ recturer.getLastName }} {{ recturer.getFirstName }} {{ recturer.getPatronimic }}{{ include('recturers/_delete_form.html.twig') }}

                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
