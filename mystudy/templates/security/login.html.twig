<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login Page</title>
    {% block stylesheets %}
      <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet">
    {% endblock %}
</head>
<body>
<form id="form" action="" method="post">

        {% for message in app.flashes('success') %}
            <div class="success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
          <div class="error">{{ message }}</div>
        {% endfor %}

    {% if error %}
      <div class="error">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
  <label>Username</label>
  <input type="text" name="_username" value="{{ lastUserName }}" ><br>
  <label>Password</label>
  <input type="password" name="_password"><br>
  <input id="login" type="submit" value="Login">
</form>
</body>
</html>