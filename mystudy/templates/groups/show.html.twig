{% extends 'management/management.html.twig' %}
   {% block stylesheets %}
       {{ parent() }}
     <link href="{{ asset('css/structure.css') }}"  rel="stylesheet">
   {% endblock %}

{% block title %}Структура института{% endblock %}
     {% block workspase %}
       <div id="block_workspace">
           {% block departmemts_list %}
             <ul id="departments">
                 {% for department in data_base.getDepartments %}
                   <li>
                     <a href="/management/structure/department/{{ department.getShortName }}">{{ department.getShortName }}</a>
                   </li>
                 {% endfor %}
             </ul>
           {% endblock %}
         <div id="group_info">
             {% block groups_info %}

             {% endblock %}
         </div>

         <div id="group_list">
             {% block groups_list %}
                 <ul id="courses">
                     {% for course, groups  in data_base.getGroups(department) %}
                         <li>
                             <ul id="groups">
                                 <li><h4>{{ course }}курс</h4></li>
                                 <li><a href="/management/structure/department/{{ department }}/{{ course }}/new">Добавить</a></li>
                                 {% for group  in groups %}
                                     <li><a href="/management/structure/department/{{ department }}/group/{{ group.getId  }}/info">
                                             {{ group.getDepartment.getShortName }}{{ group.getYearOfAdmission }}{{ group.getNumber }}</a></li>
                                 {% endfor %}
                             </ul>
                         </li>
                     {% endfor %}
                 </ul>
             {% endblock %}
         </div>



       </div>
     {% endblock %}