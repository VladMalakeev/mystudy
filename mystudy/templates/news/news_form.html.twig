{% extends 'news/news_list.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/form/form_news.css') }}"  rel="stylesheet">
{% endblock %}

{% block absolute %}
<div id="form_cover">
    <div id="newData">
        {{ form_start(form) }}

        <div id="form_header">
            <h3>{{ form_label(form.header) }}</h3>
            {{ form_widget(form.header) }}
        </div>

        <div id="form_content">

            <div id="form_image">
                <h3 id="image_header">{{ form_label(form.image) }}</h3>

                <div id="image">
                    {% if image != null %}
                        <img src="{{ asset('uploads/images/'~image) }}"  width='100%' height='100%'/>
                    {% endif %}
                </div>

                <div id="image_btn">
                {{ form_widget(form.image) }}
                </div>

            </div>

            <div id="form_description">
                <h3>{{ form_label(form.description) }}</h3>
                {{ form_widget(form.description) }}
            </div>

        </div>

        <div id="form_buttons">
            <input type="submit" class="form_submit" value="Сохранить"/>
            <a class="form_submit" href="{{ path('news_index') }}">Отмена</a>
        </div>
        <input type="hidden" name="institute" value="{{ app.user.institute.getId }}">
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}